# --- Force HTTPS (safe since SSL is enabled) ---
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteCond %{HTTPS} !=on
  RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>

# --- SPA routing (serve index.html for non-file routes) ---
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]
  RewriteRule . /index.html [L]
</IfModule>

# --- Caching (HTML no-cache, assets long-cache) ---
<IfModule mod_headers.c>
  Header append Vary "Accept-Encoding"

  # HTML should always be fresh
  <FilesMatch "\.html$">
    Header set Cache-Control "no-store, no-cache, must-revalidate, max-age=0"
  </FilesMatch>

  # Hashed assets can be cached long
  <FilesMatch "\.(?:js|css|png|jpg|jpeg|gif|webp|avif|svg|ico|woff2?|ttf|eot)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>

  # Security basics
  Header always set X-Content-Type-Options "nosniff"
  Header always set X-Frame-Options "SAMEORIGIN"
  Header always set Referrer-Policy "strict-origin-when-cross-origin"
  # HSTS (enforce HTTPS in browsers). Remove if you donâ€™t want it.
  Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"
  # Optional: lock down powerful features
  Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
</IfModule>

# --- Brotli (preferred) ---
<IfModule mod_brotli.c>
  BrotliCompressionQuality 5
  AddOutputFilterByType BROTLI_COMPRESS text/html text/plain text/css application/javascript application/json application/xml image/svg+xml
</IfModule>

# --- Gzip (fallback when Brotli unavailable) ---
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/css application/javascript application/json application/xml image/svg+xml
  DeflateCompressionLevel 6
</IfModule>

# --- MIME types for fonts ---
AddType font/woff2 .woff2
AddType font/woff  .woff

# --- Misc ---
DirectoryIndex index.html
Options -Indexes
